<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft1841.example1.ArrayController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <HBox spacing="50">
            <Button text="查看数组" onAction="#listAll"/>
            <Button text="最大值" onAction="#getMax"/>
            <padding>
                <Insets top="100" left="370"/>
            </padding>
        </HBox>
    </top>
    <center>
        <ListView fx:id="arrayList">
        </ListView>
    </center>

    <bottom>
        <FlowPane alignment="BOTTOM_CENTER"  prefHeight="50.0">
                <Label fx:id="maxLabel"/>
            <padding>
                <Insets bottom="20"/>
            </padding>
        </FlowPane>
    </bottom>
</BorderPane>